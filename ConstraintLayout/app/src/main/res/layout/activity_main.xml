<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020829"
    tools:context=".MainActivity">

    //ABITIA ROJO ENDHIR FERNANDO

    <ImageView
        android:id="@+id/tierra"
        android:layout_width="28dp"
        android:layout_height="27dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/sol"
        app:layout_constraintCircle="@id/sol"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="115dp"
        app:layout_constraintEnd_toEndOf="@+id/sol"
        app:layout_constraintStart_toStartOf="@+id/sol"
        app:srcCompat="@drawable/ic_tierra" />//YA

    <ImageView
        android:id="@+id/marte"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@+id/sol"
        app:layout_constraintCircle="@id/sol"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="143dp"
        app:layout_constraintEnd_toEndOf="@+id/sol"
        app:layout_constraintStart_toStartOf="@+id/sol"
        app:srcCompat="@drawable/ic_marte" />//YA


    <ImageView
        android:id="@+id/jupiter"
        android:layout_width="49dp"
