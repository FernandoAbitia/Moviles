    <ImageView
        android:id="@+id/mercurio"
        android:layout_width="11dp"
        android:layout_height="18dp"
        app:layout_constraintBottom_toTopOf="@+id/sol"
        app:layout_constraintCircle="@id/sol"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="65dp"
        app:layout_constraintEnd_toEndOf="@+id/sol"
        app:layout_constraintStart_toStartOf="@+id/sol"
        app:srcCompat="@drawable/ic_mercurio" />//YA

    <ImageView
        android:id="@+id/neptuno"
